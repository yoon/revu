!!!
%html
  %head
    %title= @title
    = @javascripts.blank? ? "" : javascript_include_tag(@javascripts)
    = yield :head
    -#= stylesheet_link_tag ""
    = @stylesheets.blank? ? "" : stylesheet_link_tag(@stylesheets)
    %style{:type => "text/css"}
      /
        = yield :styles
    %body
      #container
        = render :partial => '/users/user_bar'
        = link_to_unless_current "CVs", cvs_path
        = link_to_unless_current "Activities", activities_path
        #content
          %h1= @title
          = yield