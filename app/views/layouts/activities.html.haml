!!!
%html
  %head
    %title= @title
    = @javascripts.blank? ? "" : javascript_include_tag(@javascripts)
    = yield :head
    = stylesheet_link_tag "revu"
    = @stylesheets.blank? ? "" : stylesheet_link_tag(@stylesheets)
    %style{:type => "text/css"}
      /
        = yield :styles
    %body
      #container
        #header
          %ul#tabs
            %li{:class => (@controller.controller_name == 'cvs' ? 'current' : nil) }= link_to_unless_current "CVs", cvs_path
            %li{:class => (@controller.controller_name == 'activities' ? 'current' : nil) }= link_to_unless_current "Activities", activities_path
          #user-bar
            = render :partial => '/users/user_bar'
          %br.clear
        #content
          #flash
            - if flash[:notice]
              .notice
                = flash[:notice]
          %h1= @title
          = yield